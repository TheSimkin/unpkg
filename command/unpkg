#!/bin/sh

set -o nounset

packages() {
    find /package/unpkg/data/catalog -type f | sed "s#^/package/unpkg/data/catalog/##"
}

if test ${#} = 0
then
    packages;
else
    if packages | grep -q "^${1}\$"
    then
        exec /package/unpkg/data/catalog/${@}
    else
        printf "\"%s\" is not a recognized package" "${1}"
    fi
fi
